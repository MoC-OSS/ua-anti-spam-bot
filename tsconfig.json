{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/lib-types"
    ],
    "paths": {
      "@mtproto/core": [
        "./src/lib-types/mtproto__core"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src"
  },
  "moduleResolution": "node",
  "display": "Recommended",
  "include": [
    "src/**/*",
    "dataset/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/lib-types/**"
  ]
}
